<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:paddingBottom="40dp"
    tools:context=".Createacount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerInParent="true"
            android:layout_marginTop="27.8dp"
            android:src="@drawable/account" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_yoga"
            android:layout_centerInParent="true"
            android:layout_marginTop="48.7dp"
            android:text="Change starts here"
            android:textColor="#e9707d"
            android:textSize="26sp" />



        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_start"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect_pink_radius"
            android:gravity="center"
            android:onClick="onLoginClick"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect_blue_radius"
            android:gravity="center"
            android:onClick="onRegisterClick"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="81dp"
            android:layout_marginLeft="41dp"

            android:layout_marginTop="37dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="5dp"
            android:gravity="center" />

    </RelativeLayout>


</ScrollView>