<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecf2"
    android:clipToPadding="true"
    android:fillViewport="true"
    android:paddingBottom="33dp"
    android:scrollbars="none"
    tools:context=".Walkthrough">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.9dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_yoga"
            android:layout_width="211dp"
            android:layout_height="343dp"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/shiva_6" />

        <TextView
            android:id="@+id/tv_getfitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_yoga"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/avenir_book"
            android:gravity="center"
            android:text="Get fitter, stronger, and embrace a\nhealthier lifestyle"
            android:textColor="#8c8c8c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_getfitter"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="41dp"
            android:background="@drawable/rect_pink_radius"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="GET STARTED"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</ScrollView>